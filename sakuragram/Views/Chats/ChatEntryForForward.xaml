<?xml version="1.0" encoding="utf-8"?>
<Button x:Name="ForwardButton"
        x:Class="sakuragram.Views.Chats.ChatEntryForForward"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        MinWidth="230"
        MaxWidth="230"
        MinHeight="50"
        MaxHeight="50"
        Width="230"
        Height="50"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalContentAlignment="Left"
        VerticalContentAlignment="Center"
        Click="ChatEntryForForward_OnClick">
        
        <StackPanel Orientation="Horizontal">
                <Border Width="32" Height="32" CornerRadius="30" Margin="5">
                        <Border.Background>
                                <ImageBrush x:Name="ProfilePicture" />
                        </Border.Background>
                </Border>
                <TextBlock x:Name="ChatName" Text="Title" />
        </StackPanel>
</Button>